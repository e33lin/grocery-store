<head>
  <link rel="stylesheet" href="number.css">
  <link rel="stylesheet" href="application.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins">
  <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet">

</head>

<div class="store">
    <%= $current_recommendation.store %>
</div>


<%# <p> this data was last refreshed at: </p>
<%= $last_data_refresh[0] %> 

<table>
<tbody>
   
<% unknown = [] %>

<% for x in 0..$products.length()-1%>
    <tr>
        <% if ($products[x].nil?)%>
           <% unknown.push($list[x]) %>
        <% else %>
            <% if ($products[x].nil?) %>
                
            <% else %>
                <td><%= $products[x] %> </td>
            <% end %>
            <% if ($prices[x].nil?) %>
                
            <% else %>
                <% if ($quantities[x] > 1) %>
                    <td><%= $prices[x] %> x <%= $quantities[x] %></td>
                <% else %>
                    <td><%= $prices[x] %> </td>
                <% end %>
            <% end %>
            <% if ($is_sale[x].nil?) %>
                
            <% else %>
                <% if ($is_sale[x] == true) %>
                    <td><%= $is_sale[x] %>, until <%= $sale_dates[x] %></td> 
                <% else %>
                    
                <% end %>
            <% end %>
            
        <% end %>
    </tr>

<% end %>
</tbody>
</table>

<div class = "total-price">
    <div class="total">
        Total: 
    </div>

    <div class="price">
        <%= $current_recommendation.subtotal %>
    </div>
</div>

<div class = "not-found">
    Note: 
    <% for x in 0..unknown.length()-1%>

        <% if x != unknown.length()-1%>
            <%= unknown[x] %>,
        <% elsif x == unknown.length()-1 %>
            and <%= unknown[x] %>  
        <% else %>
            <%= unknown[x] %>
        <% end %>

    <% end %>
    not found at <%= $current_recommendation.store %>
</div>



<p><%= link_to 'Return to all recommendations', recommendations_path %></p>